@model IdentityTest2.Models.CarPageViewModel
@using IdentityTest2.Helpers

@{
    ViewBag.Title = "Cars";
}

<div class="container">
    <h1>Cars</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Brand</th>
                <th scope="col">Type</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Name</td>
                    <td>@car.Brand.Brand</td>
                    <td>@car.Type.Type</td>
                    <td>@car.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="btn-group">
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
    </div>
</div>

