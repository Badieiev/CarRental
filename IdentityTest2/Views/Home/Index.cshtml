@model IdentityTest2.Models.CarPageViewModel
@using IdentityTest2.Helpers

@{
    ViewBag.Title = "Cars";
}

<div class="container">
    <h1>Cars</h1>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.Label("Brand")
        @Html.DropDownList("Brand", Model.Brands as SelectList, htmlAttributes: new { @class= "form-control" })

        @Html.Label("Car type")
        @Html.DropDownList("Type", Model.CarTypes as SelectList, htmlAttributes: new { @class= "form-control" })
        
        <input type="submit" value="Filter" class="btn btn-default" />
    }
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Brand</th>
                <th scope="col">Type</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Name</td>
                    <td>@car.Brand.Brand</td>
                    <td>@car.Type.Type</td>
                    <td>@car.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="btn-group">
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
    </div>
</div>

